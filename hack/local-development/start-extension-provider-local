source $(dirname "${0}")/common/helpers

mktemp_kubeconfig
kubeconfig="$__tmp_kubeconfig"
trap cleanup_kubeconfig EXIT

LEADER_ELECTION_NAMESPACE=garden GO111MODULE=on GARDENER_SHOOT_CLIENT=external \
    go run \
		  -mod=vendor \
		  -ldflags "$("$(dirname $0)"/../get-build-ld-flags.sh)" \
		  "$(dirname $0)"/../../cmd/gardener-extension-provider-local \
		  --leader-election=false \
		  --webhook-config-mode=url \
		  --webhook-config-server-host=0.0.0.0 \
		  --webhook-config-server-port=8444 \
		  --webhook-config-url=host.docker.internal:8444
